<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>

<AnchorPane prefHeight="911.0" prefWidth="1466.0" xmlns="http://javafx.com/javafx/17.0.14" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MainController">

   <children>

      <!-- Χάρτης -->
      <WebView fx:id="mapView" layoutX="391.0" layoutY="51.0" prefHeight="427.0" prefWidth="974.0" />

      <!-- Sidebar -->
      <VBox layoutY="0" prefWidth="259.0" style="-fx-background-color: #3F2B63;" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Pane prefHeight="153.0">
               <children>
                  <Label layoutX="45.0" layoutY="55.0" text="SmartTravelJournal" textFill="WHITE">
                     <font><Font size="18.0" /></font>
                  </Label>
               </children>
            </Pane>

            <Button fx:id="uploadButton" onAction="#uploadImage" prefHeight="60.0" prefWidth="262.0" text="Upload Images" />
            <Button onAction="#openCreateAlbumWindow" prefHeight="60.0" prefWidth="259.0" text="Create Albums" />
            <Button prefHeight="60.0" prefWidth="260.0" text="User" />
            <TextField fx:id="placeNameField" promptText="Enter a name for the place" visible="false" />
            <Button fx:id="confirmPlaceButton" onAction="#onConfirmSavePlace" text="Confirm" visible="false" />
         </children>
      </VBox>

      <!-- Άλμπουμ -->
      <Pane fx:id="albumPane" layoutX="391.0" layoutY="480.0" prefHeight="400.0" prefWidth="980.0" style="-fx-background-color: lightgray; -fx-border-color: black;" visible="false">
         <children>
            <Button layoutX="950.0" layoutY="10.0" onAction="#closeAlbumWindow" text="X" />
            <HBox fx:id="imageContainer" layoutX="20.0" layoutY="50.0" spacing="20" />
         </children>
      </Pane>

      <Button fx:id="savePlaceButton" layoutX="272.0" layoutY="238.0" onAction="#onSavePlace" prefHeight="26.0" prefWidth="98.0" text="Save Location" />

   </children>
</AnchorPane>
