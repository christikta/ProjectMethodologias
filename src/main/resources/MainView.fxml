<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MainController" stylesheets="@../resources/mainView.css"  prefHeight="911.0" prefWidth="1466.0">
   <children>

      <!-- Google Maps WebView -->
      <WebView fx:id="mapView" layoutX="391.0" layoutY="51.0" prefHeight="427.0" prefWidth="974.0" />

      <!-- Sidebar Menu -->
      <VBox layoutY="-1.0" prefHeight="613.0" prefWidth="259.0" style="-fx-background-color: #3F2B63;" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Pane prefHeight="153.0" prefWidth="259.0">
               <children>
                  <Label layoutX="45.0" layoutY="55.0" prefHeight="43.0" prefWidth="170.0" text="SmartTravelJournal" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Button styleClass="button" mnemonicParsing="false" onAction="#openCreateAlbumWindow" prefHeight="60.0" prefWidth="259.0" text="Create Albums" />
            <Button fx:id="uploadButton" styleClass="button" mnemonicParsing="false" onAction="#uploadImage" prefHeight="60.0" prefWidth="265.0" text="Upload Images" />
            <TextField fx:id="placeNameField" promptText="Enter a name for the place" visible="false" />
            <Button fx:id="uploadButton1" styleClass="button" mnemonicParsing="false" onAction="#uploadVideo" prefHeight="60.0" prefWidth="265.0" text="Upload Video" translateY="-25.0" />
            <Button fx:id="confirmPlaceButton" styleClass="button" onAction="#onConfirmSavePlace" text="Confirm" visible="false" />
            <Button styleClass="button" mnemonicParsing="false" prefHeight="60.0" prefWidth="259.0" text="User" translateY="467.0" />
         </children>
      </VBox>

      <!-- Album Panel -->
      <Pane fx:id="albumPane" layoutX="391.0" layoutY="430.0" prefHeight="450.0" prefWidth="980.0" style="-fx-background-color: lightgray; -fx-border-color: black;" visible="false">
         <children>
            <Button styleClass="button" layoutX="950.0" layoutY="10.0" onAction="#closeAlbumWindow" text="X" />
            <HBox fx:id="imageContainer" layoutX="20.0" layoutY="50.0" spacing="20" />
         </children>
      </Pane>

      <Button styleClass="button" layoutX="1308.0" layoutY="8.0" onMouseClicked="#goToRegistration" text="Go to Registration">
         <font>
            <Font size="16.0" />
         </font>
      </Button>

      <Button fx:id="savePlaceButton" styleClass="button" layoutX="1229.0" layoutY="497.0" onAction="#onSavePlace" prefHeight="25.0" prefWidth="139.0" text="Save Location" />
   </children>
</AnchorPane>
